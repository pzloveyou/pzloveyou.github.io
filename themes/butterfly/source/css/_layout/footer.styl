#footer
  position: relative
  background-attachment: local
  background-position: bottom
  background-size: cover
  background: transparent;
  //opacity: 0.5;

  //&:before
  //  position: absolute
  //  top: 0
  //  left: 0
  //  display: block
  //  width: 100%
  //  height: 100%
  //  background-color: rgba(0,0,0,.5);
  //  content: ''

  if hexo-config('footer_bg') != false
    &:before
      position: absolute
      width: 100%
      height: 100%
      display : block
      top:0
      left:0
      background-color: transparent;
      //background-color: alpha($dark-black, .5)
      content: ''

#footer-wrap
  position: relative
  padding: 2rem 1rem
  text-align: center
  color: #000000

  a
    color: #000000

    &:hover
      text-decoration: underline

  .footer-separator
    margin: 0 .2rem

  .icp-icon
    padding: 0 4px
    vertical-align: text-bottom
    max-height: 1.4em
    width auto
